{% extends 'base.html.twig' %}

{% block title %}Tricks{% endblock %}

{% block body %}
    <h1>Tricks</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trick.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ trick.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ trick.content }}</td>
            </tr>
            <tr>
                <th>Create_at</th>
                <td>{{ trick.createAt ? trick.createAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Videos</th>
                <td> 
                    {% for video in trick.videos %}
                        {{ video.idPlatform }}
                    {% endfor %}
                </td>
            </tr>        
            <tr>
                <th>Comment</th>
                <td> 
                    {% for comment in trick.comments %}
                        {{ comment.content }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('trick_index') }}">back to list</a>

    <a href="{{ path('trick_edit', {'id': trick.id}) }}">edit</a>

    {{ include('trick/_delete_form.html.twig') }}
    
    {{ include('comment/_form.html.twig') }}
    {% for video in trick.videos %}
        {% if video.platform == 0 %}
            <iframe src="https://www.youtube.com/embed/{{ video.idPlatform }}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
        {% endif %}
        {% if video.platform == 1 %}
            <iframe frameborder="0" src="//www.dailymotion.com/embed/video/{{ video.idPlatform }}" allowfullscreen allow="autoplay"></iframe>
        {% endif %}
    {% endfor %}
    
{% endblock %}
