{% extends 'base.html.twig' %}

{% block title %}index{% endblock %}

{% block body %}
    <div class="nav justify-content-left" id="bannere">
        <h1>Phrase d'accorche</h1>
    </div>
    
    <h1>Tricks index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Create_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trick in tricks %}
            <tr>
                <td>{{ trick.id }}</td>
                <td>{{ trick.title }}</td>
                <td>{{ trick.content }}</td>
                <td>{{ trick.createAt ? trick.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('tricks_show', {'id': trick.id}) }}">show</a>
                    <a href="{{ path('tricks_edit', {'id': trick.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tricks_new') }}">Create new</a>
{% endblock %}

